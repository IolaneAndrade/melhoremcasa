<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/farm_popular_info"
        android:src="@mipmap/drugstore_info_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:id="@+id/topbar_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8098a5"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/topbar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0c0c0c"
            android:textSize="20sp"
            android:text="Sobre o programa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/topbar_back"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/topbar_logo"
            android:background="@mipmap/logo_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClickAbout"
            android:contentDescription="@string/logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/topbar_back"
            android:background="@mipmap/arrow_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="goToConfiguration"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/farm_popular_info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text para oferecer informações sobre o Programa Farmácia Popular do Governo Federal"
            android:id="@+id/text_info_drugstore"
            android:layout_below="@+id/farm_popular_info"
            android:layout_alignParentStart="true"/>
    </ScrollView>

</RelativeLayout>