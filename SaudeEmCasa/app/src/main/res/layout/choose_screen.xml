<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.ChooseScreen"
    android:background="#F5F5F5"
    android:contextClickable="false">

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Melhor em Casa"
        android:id="@+id/melhor_em_casa_button"
        android:textColor="#080808"
        android:singleLine="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:background="@drawable/screen_border"
        android:layout_alignEnd="@+id/logo" />


    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Farmácia Popular"
        android:id="@+id/farm_popular_button"
        android:textColor="#080808"
        android:textSize="20dp"
        android:background="@drawable/screen_border"
        android:focusable="true"
        android:layout_below="@+id/melhor_em_casa_button"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/infoButton"
        android:layout_alignEnd="@+id/melhor_em_casa_button" />


    <ImageView
        android:id="@+id/logo"
        android:src="@mipmap/saude_em_casa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/infoButton"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:text="Conheça os programas: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_above="@+id/melhorEmCasaInfoButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <ImageButton
        android:id="@+id/infoButton"
        android:src="@mipmap/info"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/logo"
        android:background="#30ffffff"
        android:contentDescription="Clique para saber mais sobre o o aplicativo Saúde em Casa"/>

    <ImageButton
        android:id="@+id/melhorEmCasaInfoButton"
        android:src="@mipmap/melhor_em_casa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:typeface="serif"
        android:background="#30ffffff"
        android:layout_marginEnd="29dp"
        android:contentDescription="Clique para saber mais sobre o programa Melhor em Casa"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:id="@+id/farmPopularInfoButton"
        android:src="@mipmap/farm_popular"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="Clique para saber mais sobre o programa Farmácia Popular"
        android:background="#30ffffff"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/infoButton"
        android:layout_marginEnd="23dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="fitXY" />

</RelativeLayout>